{
  "compilerOptions": {
    // Compile to ES6 (ECMAScript 2015)
    "target": "ES6",
    // Module system ES6
    "module": "ES6",
    // Node.js
    "moduleResolution": "node",
    // Absolute URLS
    "baseUrl": ".",
    // Output directory
    "outDir": "./dist",
    // Root directory of the code
    "rootDir": ".",
    // Enables strict verifications
    "strict": true,
    // Improves compatibility
    "esModuleInterop": true,
    "skipLibCheck": true,
    // Consistency of imports
    "forceConsistentCasingInFileNames": true,
    // Aliases
    "paths": {
      "@controllers/*": ["./controllers/*"],
      "@models/*": ["./models/*"],
      "@services/*": ["./services/*"],
      "@views/*": ["./views/*"]
    }
  },
  // Compiles all the .ts files
  "include": ["**/*.ts"],
  // Excludes node_modules
  "exclude": ["node_modules"]
}